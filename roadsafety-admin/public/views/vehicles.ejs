<!DOCTYPE html>
<html>
	<head>
		<link
			rel="stylesheet"
			href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
		/>
		<link
			rel="stylesheet"
			href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"
		/>
		<script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
		<style>
			body {
				background-color: #ecedec;
			}
		</style>
	</head>
	<body>
		<!-- We are including the navbar here -->
		<%- include ('includes/navbar') %>

		<div class="container">
			<h2>Editing: <strong>Movies</strong></h2>

			<div class="row clearfix">
				<% vehicles.forEach(function(vehicle, index) { %>
				<div class="col-sm-4">
					<div class="panel">
						<div class="panel-heading">
							<h3 class="panel-title">Edit: <%= vehicle.title %></h3>
						</div>
						<div class="panel-body text-center">
							<label>Name</label>
							<input
								type="text"
								class="form-control"
								value="<%= vehicle.title %>"
							/>
							<label>Release</label>
							<input
								type="text"
								class="form-control"
								value="<%= vehicle.release %>"
							/>
							<label>Score</label>
							<input
								type="text"
								class="form-control"
								value="<%= vehicle.score %>"
							/>
							<label>Reviewer</label>
							<input
								type="text"
								class="form-control"
								value="<%= vehicle.reviewer %>"
							/>
							<label>Publication</label>
							<input
								type="text"
								class="form-control"
								value="<%= vehicle.publication %>"
							/>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
			<a class="btn btn-primary btn-block">Save</a>
		</div>
	</body>
</html>
